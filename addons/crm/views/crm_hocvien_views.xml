<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="crm_hocvien_form_view" model="ir.ui.view">
            <field name="name">crm.hocvien.form.view</field>
            <field name="model">crm.hocvien</field>
            <field name="arch" type="xml">
                <form string="">
                    <header>
                        <button string= "Insert Chuyen Nganh" name="action_Chuyennganh" type="object" class="oe_highlight" />
                        <button string= "Insert Khoi Nganh" name="action_Khoinganh" type="object" class="oe_highlight" />
                        <button string= "Insert Nganh Hoc" name="action_Nganhhoc" type="object" class="oe_highlight" />
                        <button string= "Update He Dao Tao" name="action_UpdateHDT" type="object" class="oe_highlight" />
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="mshv"></field>
                                <field name="ho"></field>
                                <field name="ten"></field>
                            </group>
                            <group>
                                <field name="heDaoTaoId"></field>
                                <field name="nganhId"></field>
                                <field name="chuyenNganhId"></field>
                                <field name="khoiNganhId"></field>
                                
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="crm.hocvien_view_tree" model="ir.ui.view">
            <field name="name">crm.hocvien.view.tree</field>
            <field name="model">crm.hocvien</field>
            <field name="arch" type="xml">
                <tree string="HocVien">
                    <field name="mshv" />
                    <field name="ho" />
                    <field name="ten" />
                    <field name="heDaoTaoId" />
                    <field name="nganhId" />
                    <field name="chuyenNganhId" />
                    <field name="khoiNganhId" />
                    
                </tree>
            </field>
        </record>        

        <record id="crm_hocvien_action" model="ir.actions.act_window">
            <field name="name">Action hocvien</field>
            <field name="res_model">crm.hocvien</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    create student!
                </p>
            </field>
        </record>

    </data>
</odoo>