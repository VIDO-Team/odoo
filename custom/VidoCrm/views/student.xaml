<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<odoo>
    <data>
        <record id="student_form_view" model="ir.ui.view">
            <field name="name">student.form.view</field>
            <field name="model">student</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label for="Name" string="student Name" class="oe_edit_only"/>
                            <h1><field name="Name" placeholder="Hao"/></h1>

                        </div>
                        <group name="images">
                            <group>
                                <field name="MSSV"/>
                                <field name="SDT"/>
                            </group>
                            <group>
                                <field name="Ngaysinh"/>
                                <field name="Thangsinh"/>
                                <field name="Namsinh"/>
                            </group>                            
                        </group>
                        <notebook>
                            <page name="general_information" string="General Information">
								<group>
									<group>
										<field name="Status"/>
                                        <field name="ResponseStatus"/>
                                        <field name="UpdateDatetime"/>
									</group>
									
								</group>
							</page>
							<!-- <page name="additional_information" string="Additional Information">
								<group>
									<group string="Images">
										<field name="pet_image" string="Pet's Image" widget="image"/>
									</group>
									<group string="Products">
										<field name="product_ids" widget="many2many_tags"/>
									</group>
								</group>
							</page>							 -->
						</notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="student_tree_view" model="ir.ui.view">
            <field name="name">my.pet.tree.view</field>
            <field name="model">my.pet</field>
            <field name="arch" type="xml">
                <tree string="Student" default_order="create_date desc">
                    <field name="Name"/>
                    <field name="MSSV"/>
                    <field name="Ngaysinh"/>
                    <field name="Thangsinh"/>                    
                    <field name="Namsinh"/>
                    <field name="Gender"/>
                    <field name="SDT"/>
                    <field name="Status"/>
                    <field name="UpdateDatetime"/>
                    <field name="ResponseStatus"/>
                </tree>
            </field>
        </record>

        <record id="action_student" model="ir.actions.act_window">
            <field name="Name">My student</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">Model.student</field> <!-- co the sai-->
            <!-- <field name="view_type">form</field> --> <!-- Odoo 13 has removed this field -->
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('student_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('student_form_view')})]"/>
        </record>

        <menuitem id="menu_student"
            name="My Pet"
            action="action_student"
            sequence="10"
            groups="base.group_user"/>
    </data>
</odoo>