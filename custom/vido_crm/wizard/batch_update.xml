<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_student_batch_update" model="ir.ui.view">
        <field name="name">view.student.batch.update</field>
        <field name="model">student.batchupdate.wizard</field>
        <field name="arch" type="xml">
            <form string="Batch Update">
                <group>
                    <group>
                        <field name="Name"/>
                        <field name="MSSV"/>
                        <field name="Ngaysinh"/>
                        <field name="Thangsinh"/>
                        <field name="Namsinh"/>
                        <field name="Gender"/>
                        <field name="SDT"/>
                        <field name="Status"/>
                        <field name="UpdateDatetime"/>
                        <field name="ResponseStatus"/>
                    </group>
                    <group/>
                </group>                
                <p>
                    Apply updating on the selected record(s)?
                </p>
                <footer>
                    <button string="Confirm" name="multi_update" type="object" default_focus="1" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    

    <record id="action_student_batch_update" model="ir.actions.act_window">
        <field name="name">Batch Update</field>
        <field name="res_model">student.batchupdate.wizard</field>
        <field name="binding_model_id" ref="model_student"/>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_student_batch_update"/>
    </record>
</odoo>